<div id="introShopping" class="view">


  <div class="mask rgba-black-strong">
    <div class="container-fluid ">
      <div class="row text-center">
        <div class="col-md-12">
          <h4>Shopping List</h4>
          <div class="container-fluid ">
            {{#each ShoppingList}}
            <div class="row list-row  d-flex justify-content-center text-center">
              <div class="col-md-3">
                <input type="text" class="item-list item-name-update" data-id={{this.id}} value="{{this.item_name}}"
                  placeholder="Item Name">
                <input type="text" class="item-list item-format-update  line-input-2" data-id={{this.id}}
                  value="{{this.item_format}}" placeholder="Item Packaging">
              </div>
              <div class="col-md-2">
                <input type="text" class="item-list item-number-update" data-id={{this.id}} value={{this.number_items}}
                  placeholder="0">
                <input type="text" class="item-list item-category-update  line-input-2" data-id={{this.id}}
                  value="{{this.category}}" placeholder="Item Category">
              </div>
              <div class="col-md-1"></div>
              <div class="col-md-2">
                <button type="submit" button_id={{this.id}} class="sl-add-button  btn-dark" data-toggle="tooltip"
                  data-placement="bottom" title="Duplicate Item"><i class="fa fa-plus"></i></button>
                <button type="submit" button_id={{this.id}} class="sl-delete-button  btn-dark" data-toggle="tooltip"
                  data-placement="bottom" title="Delete Item"><i class="fa fa-remove"></i></button>
                <button type="submit" button_id={{this.id}} class="sl-update-button  btn-dark" data-toggle="tooltip"
                  data-placement="bottom" title="Update Item"><i class="fa fa-edit"></i></button>
                <button type="submit" button_id={{this.id}} class="sl-move-button  btn-dark" data-toggle="tooltip"
                  data-placement="bottom" title="Move to Inventory List"><i class="fa fa-arrow-right"></i></button>
              </div>
            </div>
            {{/each}}
          </div>
          <div class="lcontainer-fluid list-entry">
            <form class="add-shopping form-control-sm">
              <div class="form-group">
                {{!-- <label for="ca">New Shopping Item:</label> --}}
                <input type="text" id="item-name-input" placeholder="Starkist Tuna" data-toggle="tooltip"
                  data-placement="bottom" title="Type in the name of the item you want.">
                {{!-- <label for="ca">Item Format:</label> --}}
                <input type="text" id="item-format-input" placeholder="Can" data-toggle="tooltip"
                  data-placement="bottom" title="Type in the type of packaging.">
                {{!-- <label for="ca">Number Items:</label> --}}
                <input type="text" id="item-number-input" placeholder="# Items" data-toggle="tooltip"
                  data-placement="bottom" title="Type in the amount of items.">
                {{!-- <label for="ca">Category:</label> --}}
                <input type="text" id="item-category-input" placeholder="Grocery" data-toggle="tooltip"
                  data-placement="bottom" title="Type in the category of item.">
              </div>
              <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Error:</span> <span class="msg"></span>
              </div>
              <div class="add-button-area"><button type="submit" class="add-button btn-dark" data-toggle="tooltip"
                  data-placement="bottom" title="Add Item"><i class="fa fa-plus"></i></button></div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-dark">System Message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-dark">
        <p>Your item has been updated!</p>
      </div>
    </div>
  </div>
</div>