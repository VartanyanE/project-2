<div id="intro" class="view">

    <div class="mask rgba-black-strong">


        <div class="container-fluid d-flex align-items-center justify-content-center h-100">

            <div class="row d-flex justify-content-center text-center">

                <div class="col-md-12">


                    <h2>Inventory List</h2>
                    <div class="container-fluid list-area">
                        {{#each inventory}}
                        <div class="row list-row">
                            <div class="col-md-1"></div>
                            <div class="col-md-2"><input type="text" class="item-list item-name-update"
                                    data-id={{this.id}} value="{{this.item_name}}" placeholder="Item Name"></div>
                            <div class="col-md-2"><input type="text" class="item-list item-format-update"
                                    data-id={{this.id}} value="{{this.item_format}}" placeholder="Item Packaging"></div>
                            <div class="col-md-1"> <input type="text" class="item-list item-number-update"
                                    data-id={{this.id}} value={{this.number_items}} placeholder="0"></div>
                            <div class="col-md-2"> <input type="text" class="item-list item-category-update"
                                    data-id={{this.id}} value="{{this.category}}" placeholder="Item Category"></div>
                            <div class="col-md-4"><button type="submit" button_id={{this.id}}
                                    class="delete-button btn-dark">Delete</button>
                                <button type="submit" button_id={{this.id}}
                                    class="update-button btn-dark">Update</button>
                                <button type="submit" button_id={{this.id}}
                                    class="move-to-shopping-button btn-dark">Move to
                                    Shopping List</button></div>

                        </div>








                        {{/each}}
                    </div>
                    <div class="container-fluid list-entry">
                        <form class="add-inventory form-control-sm">
                            {{!-- item_name,item_format,number_items,category,createdAt,updatedAt,UserId --}}
                            <div class="form-group">
                                {{!-- <label for="ca">New Inventory Item:</label> --}}
                                <input type="text" id="item-name-input" placeholder="Starkist Tuna">
                                {{!-- <label for="ca">Item Format:</label> --}}
                                <input type="text" id="item-format-input" placeholder="Can">
                                {{!-- <label for="ca">Number Items:</label> --}}
                                <input type="text" id="item-number-input" placeholder="# Items">
                                {{!-- <label for="ca">Category:</label> --}}
                                <input type="text" id="item-category-input" placeholder="Grocery">

                            </div>

                            <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                <span class="sr-only">Error:</span> <span class="msg"></span>
                            </div>

                            <div class="add-button-area"><button type="submit" class="add-button">Add Item</button>
                            </div>

                        </form>
                    </div>

                </div>

            </div>

        </div>

    </div>
</div>