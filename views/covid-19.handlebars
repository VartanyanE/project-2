<link href="stylesheets/covid.css" rel="stylesheet">

<div id="intro" class="view">

    <div class="p-3 mb-2 bg-white text-dark">
        <div class="container-fluid d-flex align-items-center justify-content-center h-100">

            <div class="row d-flex justify-content-center text-center">

                <div class="col-md-12">

                    <div class="jumbotron">
                        <div class="container">
                            <h1 class="display-4">COVID-19</h1>
                            <p class="lead">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Odio deleniti ex
                                sit? Quia mollitia explicabo, veniam autem animi fugiat asperiores dignissimos aliquid,
                                temporibus totam pariatur, neque id quasi dolore vitae?</p>
                        </div>
                    </div>


                    <!-- SEARCH INPUT -->
                    <div class="input-group mb-3 w-50 p-1 mx-auto">
                        <input id="button-addon2" type="text" class="form-control" placeholder="Search by State"
                            aria-label="Search by State" aria-describedby="button-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button" id="button-addon2">Submit</button>
                        </div>
                    </div>

                    <!-- TABLE TO DISPLAY RESULTS FOR COVID -->
                    <div class="table-wrapper-scroll-y my-custom-scrollbar">

                        <table id="stateTable" class="table table-striped table-bordered table-sm" cellspacing="0"
                            width="100%">
                            <thead>
                                <tr id="state">
                                    <th class="th-sm">State
                                    </th>
                                    <th class="th-sm">Tested Positive
                                    </th>
                                    <th class="th-sm">Tested Negative
                                    </th>
                                    <th class="th-sm">Deaths
                                    </th>
                                    <th class="th-sm">Recovered
                                    </th>
                                    <th class="th-sm">Total
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="data">
                                <tr>
                                    <td id="state"></td>
                                    <td id="positive"></td>
                                    <td id="negative"></td>
                                    <td id="deaths"></td>
                                    <td id="recovered"></td>
                                    <td id="total"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>

    </div>
    <div id="newsSection" class="card-group">
        <div class="card m-3 pb-3" id="app">
            <img class="card-img-top" src="https://via.placeholder.com/150" alt="Card image cap">
            <div class="card-body">
                <h5 id="articleTitle" class="card-title">{{ result.title }}</h5>
                </h5>
                <p class="card-text">{{ result.abstract }}</p>
            </div>
        </div>
        <div class="card m-3 pb-3">
            <img class="card-img-top" src="https://via.placeholder.com/150" alt="Card image cap">
            <div class="card-body">
                <h5 id="articleTitle" class="card-title">{{ result.title }}</h5>
                <p class="card-text">{{ result.abstract }}</p>
            </div>
        </div>
        <div class="card m-3 pb-3">
            <img class="card-img-top" src="https://via.placeholder.com/150" alt="Card image cap">
            <div class="card-body">
                <h5 id="articleTitle" class="card-title">{{ result.title }}</h5>
                <p class="card-text">{{ result.abstract }}</p>
            </div>
        </div>
    </div>
</div>
</div>

